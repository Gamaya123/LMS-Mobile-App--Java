<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myacc.SlideshowFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:text="My Account"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="Name:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Janidu Pasan"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewNameLabel"
        app:layout_constraintTop_toTopOf="@id/textViewNameLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewTelephoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Telephone:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textViewNameLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewName" />

    <TextView
        android:id="@+id/textViewTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="075-4640658"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewTelephoneLabel"
        app:layout_constraintTop_toTopOf="@id/textViewTelephoneLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Address:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textViewTelephoneLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewTelephone" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gampaha"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewAddressLabel"
        app:layout_constraintTop_toTopOf="@id/textViewAddressLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textViewAddressLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewAddress" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="janidupasan2@gmail.com"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewEmailLabel"
        app:layout_constraintTop_toTopOf="@id/textViewEmailLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewCoursesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Courses:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textViewEmailLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail" />

    <TextView
        android:id="@+id/textViewCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewCoursesLabel"
        app:layout_constraintTop_toTopOf="@id/textViewCoursesLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewRegisteredLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Registered:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textViewCoursesLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewCourses" />

    <TextView
        android:id="@+id/textViewRegistered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-04-30"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewRegisteredLabel"
        app:layout_constraintTop_toTopOf="@id/textViewRegisteredLabel"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:textColor="@color/sharpblue"
        android:onClick="selectImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRegistered"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toEndOf="@id/btnSelectImage"
        app:layout_constraintTop_toBottomOf="@id/textViewCourses"
        app:layout_constraintVertical_bias="0.112"
        tools:src="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>